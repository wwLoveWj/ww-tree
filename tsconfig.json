{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node", "css-modules"] // 添加 css-modules 类型定义
  },
  "include": ["./src/**/*.tsx"],
  "exclude": ["node_modules"]
}
